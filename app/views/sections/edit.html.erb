<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@section, url: {page_id: @page.id, action: :update}, :html => {:method => :patch} ) do |f| %>
            <%= f.label :title %>
            <%= f.text_field :title %>
            
            <%= f.label(:page_id, "Page") %>
            <%= f.select(:page_id, @pages.map {|p| [p.title, p.id]}) %>
  
            <%= f.label :position %>
            <%= f.number_field :position %>
            
            <%= f.label(:content_type) %>
            <div class="radio">
                <label>
                <%= f.radio_button(:content_type, 'text', class: "text", checked: true) %>
                    Text
                </label>
            </div>
            <div class="radio">
                <label>
                <%= f.radio_button(:content_type, 'HTML', class: "html") %> HTML
                </label>
            </div>
  
            <%= f.label :content %>
            <%= f.text_area :content, class: 'wysihtml5' %>
            
            <%= f.label :visible %>
            <%= f.check_box :visible %>
            
            
            <%= f.submit 'Update', class: 'btn btn-primary' %>
        <% end %>
    </div>
</div>