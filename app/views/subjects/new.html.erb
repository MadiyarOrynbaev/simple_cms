<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@subject) do |f| %>
            <%= f.label :title %>
            <%= f.text_field :title %>
            
            <%= f.label :position %>
            <%= f.number_field :position %>
            
            <%= f.label :visible %>
            <%= f.check_box :title %>
            
            <%= f.submit 'Create', class: 'btn btn-primary' %>
        <% end %>
    </div>
</div>