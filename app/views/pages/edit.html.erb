<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@page, url: {subject_id: @subject.id, action: :create}, :html => {:method => :post} ) do |f| %>
            <%= f.label :title %>
            <%= f.text_field :title %>
            
            <%= f.label(:subject_id, "Subject") %>
            <%= f.select(:subject_id, @subjects.map {|s| [s.title, s.id]}) %>
  
            <%= f.label :position %>
            <%= f.number_field :position %>
            
            <%= f.label :visible %>
            <%= f.check_box :visible %>
            
            <%= f.label :link %>
            <%= f.text_field :link %>
            
            <%= f.submit 'Edit', class: 'btn btn-primary' %>
        <% end %>
    </div>
</div>